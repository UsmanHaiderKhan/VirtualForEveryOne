@model VirtualForEveryOne.Models.Post

@{
    ViewBag.Title = "EditQuestion";
    var message = ViewBag.successMessage;
    if (message != null)
    {
        <script type="text/javascript">
            var message = '@message';
            if(message){
                window.alert(message);
            }

        </script>
    }

}
<div class="container">
    <div class="row" style="margin-top: 60px;">
        <div class="col-md-6">
            <h2>EditQuestion</h2>
            @using (Html.BeginForm("EditQuestion", "Home", FormMethod.Post, new { OnSuccess = "AddAvailabilitySuccess" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Post</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.question, htmlAttributes: new { @style = "color:white", @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.question, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.tag, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tag, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.HiddenFor(model => model.anonymous)
                                @Html.ValidationMessageFor(model => model.anonymous, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>

                </div>

            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</div>

<script>
    $(function () {

    });




</script>
