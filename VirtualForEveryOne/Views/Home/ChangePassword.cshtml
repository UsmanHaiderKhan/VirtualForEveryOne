@model VirtualForEveryOne.Models.User
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string username = ViewBag.username;
}
<div class="container mt-200">

    @using (Html.BeginForm("changepassword", "Home", new { username = username }, FormMethod.Post, new { enctype = "plain-text" }))
    {
        <div class="container-border col-lg-6 offset-lg-3 col-sm-12 " style="margin-top: 7%">

            <div class="form-group">
                @Html.TextBoxFor(m => m.password, null, new { @class = "form-control", placeholder = "Enter Your New Password" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.password, null, new { @class = "text-danger text-center" })
                </div>
            </div>

            <button type="submit" class="btn btn-success">Update Password</button>
        </div>
    }
    <div class="col-lg-6 offset-md-3 mt-50">
        @Html.ActionLink("Back To Home", "MainPage", "Home")
    </div>
</div>
