@model VirtualForEveryOne.Models.recoveryEmail

@{
    ViewBag.Title = "ForgotPassword";
}

<h2>@ViewBag.Title</h2>
<hr />
<div class="container">
    <div class="row " style="margin-top: 20px;">
        <div class="col-md-6 ">
            <div class="jumbotron">
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <label>Enter Registered Email Address!</label>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div>
                        @Html.TextBoxFor(e => e.Email, null, new { @class = "form-control", placeholder = "Enter Your email" })
                        @Html.ValidationMessageFor(e => e.Email, null, new { @class = "text-danger" })
                        <br />
                        @if (ViewBag.error != null)
                        {
                            <a class="btn btn-danger" href="@Url.Action("ForgotPassword", "Home")"><span class="glyphicon glyphicon-refresh"></span> RETRY</a>
                            <hr />
                            <div class="alert alert-danger">@ViewBag.error</div>
                        }
                        else if (ViewBag.success != null)
                        {
                            <a class="btn btn-success" href="@Url.Action("MainPage", "Home")"><span class="glyphicon glyphicon-check"></span> Login</a>
                            <hr />
                            <div class="alert alert-success">@ViewBag.success</div>
                        }
                        else
                        {
                            <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-send"></i> Send</button>
                        }
                    </div>

                }
            </div>

        </div>
    </div>

</div>

