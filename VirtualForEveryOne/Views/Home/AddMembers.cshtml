@model VirtualForEveryOne.Models.GroupMember



@using (Html.BeginForm("AddMembers", "Home", new { groupId = Convert.ToInt32(ViewBag.groupId) }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center">
                <h4 class="text-info">GroupMember</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <br />
                <br />
                <br />

                <div class="form-group">
                    @Html.LabelFor(model => model.members, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.members, new { @class = "form-control", placeholder = "Enter Member Name" })
                        @Html.ValidationMessageFor(model => model.members, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <br />
                <br />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add New Member" class="btn btn-default btn-block" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "VisitGroup")
</div>
