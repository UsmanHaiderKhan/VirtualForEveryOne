@{
    ViewBag.Title = "VirtuallyEveryone";
}

<html>

<head>
    <title>@{ViewBag.Title = "signup";}</title>
        
   

    <link href="~/Content/css/blog-post.css" rel="stylesheet">
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">



    <meta charset="UTF-8">

    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Open+Sans:400,300'>
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/icon?family=Material+Icons'>

    <link rel="stylesheet" href="~/Content/css/style.css">

</head>

@{
    Layout = "";
    if(null != TempData["alert message"])
    {
          <script type="text/javascript">
              alert("@TempData["alert message"]");
          </script>
    }
}

<body >
      

        <div class="cotn_principal">

            <div class="cont_centrar">

                <table class="main-table1">
                    <tr>
                        <td>
                            <h1 id="main-h1">virtually</h1>
                        </td>
                        <td>
                            <h1 id="main-h2">everyone</h1>
                        </td>
                    </tr>
                    
                </table>

                <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div id="d1" class="panel panel-default">
						<div id="pb" class="panel-body" >
                            <img  src="~/Content/images/ve.png" />
                            
							<h2 class="thin text-center, white">Sign in to your account</h2>
							
							<hr>
							
							
                            <form method="post" action="~/Admin/Authenticate_user">
								<div class="form-group"  >
									<label class="bold">Username/Email <span class="text-danger" >*</span></label><br>
									<input type="text" name="username" id="username" class="form-control,col-xm-12"  />
								</div>
								<div class="form-group">
									<label class="bold" >Password <span class="text-danger" >*</span></label><br>
									<input type="password" name="password" id="password" class="form-control,col-xm-12" />
								</div>

								<hr>
                                <div class="col-lg-12 ">
										<button class="btn btn-action" id="btn_log" type="submit" ><b>LOGIN</b></button>
									</div>
								
							</form>
						</div>
					</div>

				</div>
            </div>
        </div>
   
   <script> 
    
      

     $(document).ready(function () {

            //$('#checking').hide();

            $('#btn_log').click(function () {

                var username = $('#username').val();
                var password = $('#password').val();

                //$('#checking').show();

                $.getJSON("/Admin/Authenticate_user?" + "&username=" + username + "&password=" + password, function (data) {
                    //$('#checking').hide();
                    if (data) {
                        window.location.href = "/Admin/UserAdd";
                    }
                    else {
                        alert("Invalid Id or Password!");
                    }
                });

            });

        });

    </script>

    <script src="~/Scripts/js/index.js"></script>



    <script src="~/Scripts/js/jquery.js"></script>

    <script src="~/Scripts/js/bootstrap.min.js"></script>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Scripts/js/index.js"></script>

</body>

</html>
