@model VirtualForEveryOne.Models.Answer

@{
    ViewBag.Title = "DeletePost";
    Layout = "";


}

<h2>Post</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Post</legend>
    <div>
        <div>

            Id:  @Model.Id
        </div>

        <div>
            Username : @Model.username
        </div>


        <div>
            Name : @Model.a_username
        </div>
        <div>
            Question: @Model.question
        </div>
        <div>
            Answer: @Model.ans
        </div>
        <div>
            Like: @Model.like
        </div>
        <div>
            Dislike: @Model.dislike
        </div>
        <div>
            Time: @Model.time
        </div>
    </div>

    @if (@Model.image != null)
    {
        <div> <img style="width:300px; height:400px" src="@Model.image" />     </div>
    }


</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" />

    </p>
}
