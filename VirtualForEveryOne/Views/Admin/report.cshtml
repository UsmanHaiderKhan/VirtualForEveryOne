@model List<VirtualForEveryOne.Models.Report>
@{
    ViewBag.Title = "Report";
}

@{
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<html>

<body>
    <div class="container">

        <div class="row" style="background-color:lightgray; overflow-x:auto">

            <table style="width:100%" class="table-bordered">
                <caption>Reports:</caption>
                <tr>
                    <th>ID</th>
                    <th>UserName</th>
                    <th>PostId</th>
                    <th>Status</th>
                    <th>Time</th>


                    <th></th>
                </tr>
                @{
                    foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.Id</td>
                            <td>@report.username</td>
                            <td>@report.postid</td>
                            <td>@report.status</td>
                            <td>@report.time</td>


                            <td>@Html.ActionLink("View", "ViewReport", new { id = report.Id })</td>
                        </tr>
                    }
                }

            </table>


        </div>



        <hr>

    </div>

</body>

</html>
